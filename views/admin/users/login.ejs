<%- include('../../partials/header.ejs') %>

<div class="container">
  <div class="card mt-5">
    <div class="card-header"><h2>Login de Admin</h2></div>

    <div class="card-body">
      <form action="/authenticate" method="POST">
        <input
          class="form-control"
          name="email"
          type="text"
          placeholder="email@exemple.com"
        />
        <br />
        <input
          class="form-control"
          name="password"
          type="password"
          placeholder="Digite sua senha"
        />
        <br />
        <button class="btn btn-success btn-block">Logar</button>
      </form>
    </div>
  </div>
</div>

